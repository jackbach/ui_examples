extends ../layouts/base

block content
  nav.navbar.navbar-default(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') ContentManager
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          each item in ['Dashboard', 'Orders', 'Customers', 'Products', 'Collections', 'Discounts', 'Blog Posts']
            if item == 'Orders'
              li.active
                a(href='#')= item
            else
              li
                a(href='#')= item
        ul.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              | @jackbach
              b.caret
            ul.dropdown-menu
              li
                a(href='#') Action
  .container
    .row
      .col-xs-12
        h2 Orders
        include ../includes/_orders_table
